@model IndexViewModel
@{
	ViewBag.Title = "Каталог клавиатур";
	int itemsCount = @Model.Keyboards.Count();
}

<h1>Найдено @itemsCount товаров в категории Клавиатура</h1>

<div>
	<h2>Фильтры</h2>
	<form asp-area="KeyboardCatalog" asp-controller="Home" asp-action="Index">
		<h3>Бренд:</h3>
		<select asp-for="SelectedBrand">
			@foreach (var brand in Model.Brands)
			{
				<option>@brand</option>
			}
		</select>
		<h3>Тип:</h3>
		<select asp-for="SelectedType">
			@foreach (var type in Model.Types)
			{
				<option>@type</option>
			}
		</select>

		<h2>Сортировка:</h2>
		<select asp-for="SortType">
			<option value="None">Без сортировки</option>
			<option value="PriceAsc">По возрастанию цены</option>
			<option value="PriceDesc">По убыванию цены</option>
		</select>

		<br />
		<br />
		<button type="submit">Применить</button>
	</form>
</div>
<ul>
	@foreach(var keyboard in Model.Keyboards)
	{
		<li>
			<h4>Клавиатура @keyboard.KeyboardType @keyboard.Brand @keyboard.Name</h4>
			<h3>@keyboard.Price ₽</h3>
		</li>
	}
</ul>